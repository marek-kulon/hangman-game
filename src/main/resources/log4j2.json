{
  "configuration": {
    "appenders": {
      "appender": [ {
          "type": "Console",
          "name": "STDOUT",
          "PatternLayout": {
          	// used slow but verbose %M method name
            "pattern": "%d{yyyy-MM-dd HH:mm:ss.SSS} %2level{WARN=Warn, DEBUG=D, ERROR=ERROR, TRACE=T, INFO=I} %28c{1}.%M:  %m%n"
          }
        } ]
    },
    "loggers": {
      "logger": [
        {
          "name": "hangman",
          "level": "debug",
          "additivity": "false",
          "AppenderRef": { "ref": "STDOUT" }
        }
      ],
      "root": {
        "level": "info",
        "AppenderRef": {
          "ref": "STDOUT"
        }
      }
    }
  }
}